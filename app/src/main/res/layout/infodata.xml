<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/circle_image"
        android:background="@drawable/place_circle"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/roundedCornersImageView"
        android:scaleType="fitXY"
        android:padding="2dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#17202A"
        tools:text="Yashu Bhardwaj"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#566573"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginLeft="15dp"
        tools:text="yashumail911@gmail.com"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:textSize="14sp"
        android:textColor="#566573"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        tools:text="7452884965"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:textSize="14sp"
        android:textColor="#566573"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        tools:text="Site 4 Sahibabad"/>
    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:textSize="14sp"
        android:textColor="#566573"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        tools:text="New Delhi"/>




</RelativeLayout>